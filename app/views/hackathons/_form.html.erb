<div class="container">
  <%= form_for(hackathon, class: 'form-vertical') do |f| %>
    <% if hackathon.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(hackathon.errors.count, "error") %> prohibited this hackathon from being saved:</h2>

        <ul>
        <% hackathon.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :start_date %>
      <%= f.date_select :start_date, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :end_date %>
      <%= f.date_select :end_date, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>
</div>