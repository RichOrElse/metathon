<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
    <h2 class="form-signin-heading">Log in</h2>

    <label for="inputEmail" class="sr-only">Email address</label>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Email address' %>
    </div>
    <label for="inputPassword" class="sr-only">Password</label>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => 'Email address' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, :class => 'checkbox' %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", :class => 'btn btn-lg btn-primary btn-block'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
